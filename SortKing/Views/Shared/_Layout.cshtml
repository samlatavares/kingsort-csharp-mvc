<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SortKing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .header {
            background-color: #FFEBD7
        }

        .a {
            color: #545454;
            font-family: Arial;
            font-size: medium;
            font-weight:bold;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="header">
                <div>
                    <img src="~/Images/KING SORT.png" style="height:60px;width:40px;margin-left:10px;" />
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="a">KingSort</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index"> 2020 - KingSort </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
